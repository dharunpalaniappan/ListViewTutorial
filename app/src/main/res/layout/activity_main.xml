<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="670dp"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/Banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/allan"
            android:text="Clan Black"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/Banner"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/customedittext"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:hint="Enter your Player Name" />

        <EditText
            android:id="@+id/number"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/customedittext"
            android:drawableStart="@android:drawable/btn_star_big_off"
            android:hint="Enter your Player Tag"
            android:maxLength="9"></EditText>

        <Button
            android:id="@+id/join"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/number"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/allan"
            android:text="Join"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textStyle="bold"></Button>

        <TextView
            android:id="@+id/members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/join"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/allan"
            android:text="Members"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold"></TextView>

        <ListView
            android:id="@+id/listview"
            android:layout_width="300dp"
            android:layout_height="270dp"
            android:layout_below="@id/members"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/customedittext"></ListView>
    </RelativeLayout>
</RelativeLayout>
